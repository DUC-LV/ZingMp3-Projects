{
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "endOfLine": "auto",
    "importOrder": [
        "^@ott/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
    }
}